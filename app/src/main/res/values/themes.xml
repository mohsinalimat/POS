<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.POS" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_accent_secondary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/color_accent_secondary</item>


        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

    </style>

    <style name="ThemeWhiteStatusBar" parent="Theme.POS">
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_primary</item>
    </style>

    <style name="MyTheme"  parent="Theme.POS">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="PrimaryInputStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/shape_primary_inputfield_bg</item>
        <item name="android:textColor">@color/color_accent_secondary</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="PrimaryButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/shape_primary_button_bg_selector</item>
        <item name="android:textColor">@color/primary_bttn_text_colorlist</item>
    </style>

    <style name="AccentButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/shape_accent_button_bg_selector</item>
        <item name="android:textColor">@color/accent_button_text_colorlist</item>
    </style>

    <style name="BorderedTextviewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/shape_bordered_textview_bg</item>
        <item name="android:textColor">@color/color_accent_secondary</item>
    </style>

    <style name="BorderedInputWhiteBgStyle" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/shape_bordered_bg_white</item>
        <item name="android:textColor">@color/color_accent_secondary</item>
    </style>

    <style name="SelectItemTheme" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/shape_bordered_bg_white</item>
        <item name="android:textColor">@color/color_accent_secondary</item>
        <item name="android:gravity">center</item>

        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>

    </style>

    <style name="LinearLayoutButton">
        <item name="android:background">@drawable/shape_primary_button_bg_selector</item>
        <item name="android:textColor">@color/color_accent_secondary</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">11dp</item>
        <item name="android:paddingBottom">11dp</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:layout_marginTop">@dimen/home_top_bottom_margin</item>
        <item name="android:layout_marginBottom">@dimen/home_top_bottom_margin</item>
    </style>

    <style name="SecondaryButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/shape_accent_button_bg_selector</item>
        <item name="android:textColor">@color/accent_button_text_colorlist</item>
    </style>

</resources>